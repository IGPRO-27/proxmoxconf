#       gateway 192.168.1.1

auto eth0
iface eth0 inet manual

auto vmbr0
iface vmbr0 inet static
      address 192.168.1.10
      netmask 255.255.255.0
      gateway 192.168.1.1
      bridge_ports eth0
      bridge_stp off
      bridge_fd 0
